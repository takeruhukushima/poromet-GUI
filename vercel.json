{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/backend.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "requirements.txt",
          "backend/**/*.py"
        ],
        "maxDuration": 300,
        "memory": 3008
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/backend.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
