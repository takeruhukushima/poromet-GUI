{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "app/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(?<path>.+)", "dest": "/api/$path" },
    { "src": "/api", "dest": "/api/index.py" },
    {
      "src": "/(.*)",
      "dest": "/app/$1"
    }
  ]
}
